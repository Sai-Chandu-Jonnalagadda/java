import java.util.*;
class FullDiamond{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int r;
        System.out.print("enter the number of rows:");
        r=sc.nextInt();
        int i,j,k;
        for(i=0;i<=r;i++){
            for(k=0;k<r-i;k++){
                System.out.print("  ");
            }
            for(j=0;j<2*i-1;j++){
                System.out.print("* ");
            }
            System.out.println();
        }
        for(i=r-1;i>=0;i--){
            for(k=0;k<r-i;k++){
                System.out.print("  ");
            }
            for(j=0;j<2*i-1;j++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
/*OUTPUT:

enter the number of rows:5
          
        * 
      * * * 
    * * * * * 
  * * * * * * * 
* * * * * * * * * 
  * * * * * * * 
    * * * * * 
      * * * 
        * 
          

=== Code Execution Successful ===*/
